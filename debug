local ReplicatedStorage = game:GetService("ReplicatedStorage")

local References = ReplicatedStorage:WaitForChild("References")
local Utilities = References:WaitForChild("Utilities")
local ServerFolder = Utilities:WaitForChild("Server")
local FunctionsFolder = ServerFolder:WaitForChild("Functions")
local ModifyAnimalSpawnData = require(FunctionsFolder:WaitForChild("ModifyAnimalSpawnData"))
local WeightedTable = require(ReplicatedStorage.References.Utilities.Shared.WeightedTable)

-- Save the original constructor
local OriginalWeightedTableNew = WeightedTable.New

-- Override WeightedTable.New
WeightedTable.New = function(tbl)
    -- Boost all weights for testing
    if tbl and type(tbl) == "table" then
        for _, entry in pairs(tbl) do
            if entry.weight then
                entry.weight = 999999
            end
        end
    end
    -- Call the original constructor
    return OriginalWeightedTableNew(tbl)
end

print("[PATCH] WeightedTable.New patched to boost all weights")
