-- LocalScript: Patch all hair/colour tables for testing
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Navigate safely to the module
local References = ReplicatedStorage:WaitForChild("References")
local Utilities = References:WaitForChild("Utilities")
local ServerFolder = Utilities:WaitForChild("Server")
local FunctionsFolder = ServerFolder:WaitForChild("Functions")
local ModifyAnimalSpawnData = require(FunctionsFolder:WaitForChild("ModifyAnimalSpawnData"))

-- Patch every entry in every island table
local hairTables = ModifyAnimalSpawnData.tbl_19_upvr
if hairTables then
    for islandName, entries in pairs(hairTables) do
        for _, entry in pairs(entries) do
            entry.weight = 999999
        end
        print("[PATCH] Boosted all weights in", islandName)
    end
else
    warn("[PATCH] Hair/colour table (tbl_19_upvr) not found!")
end

print("[PATCH] All hair/colour tables patched")
