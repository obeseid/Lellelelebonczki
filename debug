-- LocalScript: Patch Blizzard Island hair/colour table
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Safely navigate to the module
local References = ReplicatedStorage:WaitForChild("References")
local Utilities = References:WaitForChild("Utilities")
local ServerFolder = Utilities:WaitForChild("Server")
local FunctionsFolder = ServerFolder:WaitForChild("Functions")
local ModifyAnimalSpawnData = require(FunctionsFolder:WaitForChild("ModifyAnimalSpawnData"))

-- Patch hair/colour table (tbl_19_upvr) for Blizzard Island
local hairTable = ModifyAnimalSpawnData.tbl_19_upvr and ModifyAnimalSpawnData.tbl_19_upvr["Blizzard Island"]
if hairTable then
    local patched = false
    for _, entry in pairs(hairTable) do
        if entry.value == "iceyPink" then
            entry.weight = 999999
            patched = true
        end
    end
    if patched then
        print("[PATCH] Boosted iceyPink in Blizzard Island hair/colour table")
    else
        print("[PATCH] No iceyPink entry found in Blizzard Island hair/colour table")
    end
else
    warn("[PATCH] Blizzard Island hair/colour table not found!")
end

print("[PATCH] Blizzard Island patch complete")
