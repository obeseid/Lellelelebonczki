-- LocalScript: Patch Blizzard Island for testing
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- Require the module
local ModifyAnimalSpawnData = require(
    ReplicatedStorage.References.Utilities.Server.Functions.ModifyAnimalSpawnData
)

-- Patch coat table (tbl_7_upvr) if it exists
local coatTable = ModifyAnimalSpawnData.tbl_7_upvr and ModifyAnimalSpawnData.tbl_7_upvr["Blizzard Island"]
if coatTable then
    for _, entry in pairs(coatTable) do
        if entry.value == "iceyPink" then
            entry.weight = 999999
            print("[PATCH] Boosted iceyPink in coat table for")
        end
    end
else
    warn("[PATCH] Blizzard Island coat table not found!")
end

-- Patch hair/colour table (tbl_19_upvr) if it exists
local hairTable = ModifyAnimalSpawnData.tbl_19_upvr and ModifyAnimalSpawnData.tbl_19_upvr["Blizzard Island"]
if hairTable then
    for _, entry in pairs(hairTable) do
        if entry.value == "iceyPink" then
            entry.weight = 999999
            print("[PATCH] Boosted iceyPink in hair/colour table for")
        end
    end
else
    warn("[PATCH] Blizzard Island hair/colour table not found!")
end

print("[PATCH] Blizzard Island patch complete‚Äù)
