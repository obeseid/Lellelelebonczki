local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Require the module you want to patch
local ModifyAnimalSpawnData = require(
    ReplicatedStorage.References.Utilities.Server.Functions.ModifyAnimalSpawnData
)

-- Save the original function
local original = ModifyAnimalSpawnData.ApplySpawnData

-- Monkey patch it
ModifyAnimalSpawnData.ApplySpawnData = function(animal, region)
    -- Call the original to get whatever spawn data it normally makes
    local spawnData = original(animal, region)

    -- If the region is Blizzard Island, force one item to have very high weight
    if region == "Blizzard Island" and type(spawnData) == "table" then
        for _, entry in pairs(spawnData) do
            if entry.value == "iceyPink" then -- pick whichever you want
                entry.weight = 999999 -- crank it up
                print("[TEST PATCH] Boosted iceyPink weight to", entry.weight)
            end
        end
    end

    return spawnData
end
