-- Draggable Image Local Script
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DraggableImageGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Create ImageLabel
local imageFrame = Instance.new("ImageLabel")
imageFrame.Name = "DraggableImage"
imageFrame.Size = UDim2.new(0, 200, 0, 200)
imageFrame.Position = UDim2.new(0.5, -100, 0.5, -100)
imageFrame.Image = "rbxassetid://8882612800"
imageFrame.BackgroundTransparency = 1
imageFrame.ScaleType = Enum.ScaleType.Fit
imageFrame.Parent = screenGui

-- Dragging variables
local dragging = false
local dragInput
local dragStart
local startPos

-- Update function
local function update(input)
	local delta = input.Position - dragStart
	imageFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

-- Input began
imageFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = imageFrame.Position
		
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

-- Input changed
imageFrame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

-- Input changed for dragging
UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		update(input)
	end
end)
