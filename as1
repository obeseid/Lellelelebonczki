local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Create GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ClickerStatusGui"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 60)
Frame.Position = UDim2.new(1, -210, 0, 10) -- Top right with 10px margin
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.BorderSizePixel = 2
Frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
Frame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = Frame

local StatusLabel = Instance.new("TextLabel")
StatusLabel.Size = UDim2.new(1, 0, 1, 0)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "Clicking buttons..."
StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
StatusLabel.TextSize = 18
StatusLabel.Font = Enum.Font.GothamBold
StatusLabel.Parent = Frame

-- Wait for the GUI to load
local PlayerGui = LocalPlayer.PlayerGui
local Menus = PlayerGui:WaitForChild("Menus")
local Backpack = Menus:WaitForChild("Backpack")
local Main = Backpack:WaitForChild("Main")
local Inventory = Main:WaitForChild("Inventory")
local Content = Inventory:WaitForChild("Content")
local List = Content:WaitForChild("List")

print("Found List, searching for CategoryContainers...")

local totalButtonsClicked = 0

-- Go through every child in List looking for CategoryContainers
for _, child in pairs(List:GetChildren()) do
	print("Checking child: " .. child.Name .. " (ClassName: " .. child.ClassName .. ")")
	
	if child.Name == "CategoryContainer" then
		print("Found CategoryContainer!")
		local categoryList = child:FindFirstChild("List")
		
		if categoryList then
			print("Found List inside CategoryContainer!")
			
			-- Look for TextButtons in this List
			local textButtons = {}
			for _, button in pairs(categoryList:GetChildren()) do
				print("  Checking: " .. button.Name .. " (ClassName: " .. button.ClassName .. ")")
				if button:IsA("TextButton") then
					table.insert(textButtons, button)
				end
			end
			
			-- If we found at least 1 TextButton, start clicking
			if #textButtons > 0 then
				print("Found " .. #textButtons .. " TextButtons in this CategoryContainer")
				
				for _, button in ipairs(textButtons) do
					print("Clicking button: " .. button.Name)
					
					-- Simply fire the click event
					button.MouseButton1Click:Fire()
					totalButtonsClicked = totalButtonsClicked + 1
					
					wait(0.5)
				end
			else
				print("No TextButtons found in this CategoryContainer")
			end
		else
			print("No List found inside CategoryContainer")
		end
	end
end

print("Script finished! Total buttons clicked: " .. totalButtonsClicked)

-- Update GUI to show "Done"
StatusLabel.Text = "Done! (" .. totalButtonsClicked .. " clicks)"
StatusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)

-- Wait 2 seconds then remove the GUI
wait(2)
ScreenGui:Destroy()
