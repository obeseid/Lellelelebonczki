-- ============================================
-- DRAGGING FUNCTIONALITY
-- ============================================
local dragging = false
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

titleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- ============================================
-- PATCH LOGIC
-- ============================================
local isPatched = false
local originalTypes = {}
local originalPurchaseOptions = {}
local boostsModule = nil

local function applyPatch()
    local price = tonumber(priceInput.Text) or 1
    local multiplier = tonumber(multiplierInput.Text) or 10000
    
    -- Validate inputs
    if price < 1 then price = 1 end
    if price > 1000 then price = 1000 end
    if multiplier < 1 then multiplier = 1 end
    if multiplier > 100000 then multiplier = 100000 end
    
    priceInput.Text = tostring(price)
    multiplierInput.Text = tostring(multiplier)
    
    -- WARNING: Tell user about timing
    if not isPatched then
        warn("‚ö†Ô∏è NOTE: If boosts are already loaded in the shop, you may need to rejoin for prices to update!")
    end
    
    -- Try to require the GameBoosts module
    local success, result = pcall(function()
        -- Try common paths for the GameBoosts module
        local possiblePaths = {
            ReplicatedStorage:FindFirstChild("References"),
            ReplicatedStorage:FindFirstChild("Modules"),
            ReplicatedStorage:FindFirstChild("Shared"),
        }
        
        for _, parent in ipairs(possiblePaths) do
            if parent then
                local boostsModule = parent:FindFirstChild("GameBoosts")
                if boostsModule then
                    return require(boostsModule)
                end
            end
        end
        
        error("GameBoosts module not found")
    end)
    
    if not success then
        statusLabel.Text = "‚ùå Error: GameBoosts module not found!\nTry finding it manually in ReplicatedStorage."
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        warn("Boost Modifier Error:", result)
        return
    end
    
    boostsModule = result
    
    -- Backup originals if not already saved
    if not next(originalTypes) then
        for key, value in pairs(boostsModule.types) do
            originalTypes[key] = {}
            for k, v in pairs(value) do
                originalTypes[key][k] = v
            end
        end
    end
    
    if #originalPurchaseOptions == 0 then
        for i, option in ipairs(boostsModule.purchaseOptions) do
            originalPurchaseOptions[i] = {
                id = option.id,
                duration = option.duration,
                price = option.price
            }
        end
    end
    
    -- Modify all boost types to have insane multipliers
    for key, boost in pairs(boostsModule.types) do
        if boost.luckModifiers then
            for modKey, _ in pairs(boost.luckModifiers) do
                boost.luckModifiers[modKey] = multiplier
            end
        end
    end
    
    -- Modify all purchase options to cost the specified price
    for i, option in ipairs(boostsModule.purchaseOptions) do
        option.price = price
    end
    
    isPatched = true
    statusLabel.Text = string.format("‚úÖ Modifications Active!\nPrice: %d credits | Multiplier: %dx", price, multiplier)
    statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    print(string.format("üöÄ Boost Modifier: Applied! Price=%d, Multiplier=%dx", price, multiplier))
    
    -- Refresh the Premium UI to show new prices
    task.spawn(function()
        local success, err = pcall(function()
            local subMenus = playerGui:FindFirstChild("SubMenus")
            if subMenus then
                local premium = subMenus:FindFirstChild("Premium")
                if premium then
                    -- Store if it was visible
                    local wasVisible = premium.Enabled
                    
                    -- Destroy and wait for it to recreate
                    premium:Destroy()
                    
                    -- Wait a moment for the game to recreate it
                    task.wait(0.5)
                    
                    -- Try to reopen it if it was open
                    if wasVisible then
                        -- Find the new premium menu
                        local newPremium = subMenus:FindFirstChild("Premium")
                        if newPremium then
                            newPremium.Enabled = true
                        end
                    end
                    
                    print("‚úÖ Premium UI refreshed!")
                    statusLabel.Text = string.format("‚úÖ Active & UI Refreshed!\nPrice: %d credits | Multiplier: %dx", price, multiplier)
                else
                    warn("‚ö†Ô∏è Premium menu not found in SubMenus")
                end
            else
                warn("‚ö†Ô∏è SubMenus not found in PlayerGui")
            end
        end)
        
        if not success then
            warn("‚ö†Ô∏è Failed to refresh Premium UI:", err)
            statusLabel.Text = string.format("‚úÖ Active (UI refresh failed)\nPrice: %d credits | Multiplier: %dx\nReopen shop manually", price, multiplier)
        end
    end)
end

local function removePatch()
    if not isPatched or not boostsModule then
        statusLabel.Text = "‚ö†Ô∏è No modifications to remove!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        return
    end
    
    -- Restore original types
    for key, original in pairs(originalTypes) do
        if boostsModule.types[key] then
            for k, v in pairs(original) do
                boostsModule.types[key][k] = v
            end
        end
    end
    
    -- Restore original purchase options
    for i, original in ipairs(originalPurchaseOptions) do
        if boostsModule.purchaseOptions[i] then
            boostsModule.purchaseOptions[i].price = original.price
            boostsModule.purchaseOptions[i].duration = original.duration
        end
    end
    
    isPatched = false
    statusLabel.Text = "Status: Modifications Removed"
    statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    print("üöÄ Boost Modifier: Modifications removed")
end

-- ============================================
-- BUTTON CONNECTIONS
-- ============================================
applyButton.MouseButton1Click:Connect(applyPatch)
removeButton.MouseButton1Click:Connect(removePatch)
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Hover effects
local function addHoverEffect(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = hoverColor
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = normalColor
    end)
end

addHoverEffect(applyButton, Color3.fromRGB(60, 180, 100), Color3.fromRGB(70, 200, 120))
addHoverEffect(removeButton, Color3.fromRGB(180, 60, 60), Color3.fromRGB(200, 70, 70))
addHoverEffect(closeButton, Color3.fromRGB(255, 60, 60), Color3.fromRGB(255, 80, 80))

print("üöÄ Boost Modifier GUI loaded! Configure and press Apply to modify boosts.")
