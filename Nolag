-- Simplify terrain rendering for local player
local materialService = game:GetService("MaterialService")
local terrain = workspace.Terrain
local lighting = game:GetService("Lighting")

-- 1. Disable grass rendering
terrain.Decoration = false

-- 2. Simplify all materials to flat color
for _, material in ipairs(Enum.Material:GetEnumItems()) do
	local variant = materialService:GetMaterialVariant(material)
	if variant then
		-- Remove textures
		variant.ColorMap = ""
		variant.MetalnessMap = ""
		variant.NormalMap = ""
		variant.RoughnessMap = ""
		
		-- Make tiles uniform
		variant.StudsPerTile = 0
	end
end

-- 3. Optional: Simplify lighting to reduce GPU load
lighting.EnvironmentDiffuseScale = 0
lighting.EnvironmentSpecularScale = 0
lighting.GlobalShadows = false
lighting.Ambient = Color3.fromRGB(200, 200, 200)
lighting.Brightness = 1

print("Local terrain textures simplified for performance.")
